                <opener>
                    <salute>lieb&#x017F;ter 
                        <choice>
                            <abbr>H</abbr>
                            <expan resp="#MP">Herr</expan>
                        </choice>
                        <rs type="person" ref="http://d-nb.info/gnd/130132365"
